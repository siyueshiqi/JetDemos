	<target name="theTarget">

		<echo message="Begin to run the target..." />

		<taskdef name="myTask" classname="jet.demo.task.MyTask">
		</taskdef>

		<myTask>
			<myTaskConfig>
				<message id="Mesg1" content="this is message One." />
